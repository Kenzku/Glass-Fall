<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/main.css'/>
    <link rel='stylesheet' href='/stylesheets/desktop.css'/>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/3.0.2/css/font-awesome.css">
</head>
<body>
    <div id="sidebar">
        <div id="controlPenal">
            <div id="urlCrawlerLogo"></div>
            <a href="/history">
                <div id="history">
                    <i class="icon-h-sign"></i>
                </div>
            </a>
            <a href="/howto">
                <div id="howTo">
                    <i class="icon-question-sign"></i>
                </div>
            </a>
        </div>
        <div id="urls">
            <ul>
                <% for (var i = 0; i < urls.length ; i++ ) { %>
                    <li class="urlLink" data-tag=<%=i%> >
                        <% var encodedURL = encodeURIComponent(urls[i])  %>
                        <a href="/url/<%= encodedURL %>" data-tag="<%= urls[i] %>" >
                            <%
                            var splitURL = urls[i].split("/");
                            var length = splitURL.length;
                            if (splitURL[length-1].length == 0) {
                            %>
                            <%=  splitURL[length-2] %>
                            <%
                            }else {
                            %>
                            <%=  splitURL[length-1] %>
                            <%
                            }
                            %>
                        </a>
                    <li>
                <% }%>
            </ul>
        </div>
    </div>
    <div id="content" class="content">
        <div id="imageZone"></div>
        <div id="historyZone"></div>
    </div>
</body>
<script data-main="/javascripts/main.js" src="//cdnjs.cloudflare.com/ajax/libs/require-jquery/0.25.0/require-jquery.min.js"></script>
</html>